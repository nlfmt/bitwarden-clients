{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "paths": {
      "@src/*": ["src/*"],
      "@bitwarden/node/*": ["../../../libs/node/src/*"],
      "@bitwarden/common/*": ["../../../libs/common/src/*"]
    },
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "exclude": ["node_modules"]
}
